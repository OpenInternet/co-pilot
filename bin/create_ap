#!/bin/bash

readonly custom_profile="/tmp/copilot/ap.conf"
readonly default_profile="/usr/bin/create_ap wlan0 eth0 copilot copilot_pass"

start_create_ap() {
    if [[ -e "$custom_profile" ]]; then
        echo "Starting with a custom create_ap profile."
        chmod +x "$custom_profile"
        /tmp/copilot/ap.conf
    else
        echo "Starting with the default create_ap profile."
        "$default_profile"
    fi
}

main() {
    start_create_ap
}
main
